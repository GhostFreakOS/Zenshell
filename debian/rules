#!/usr/bin/make -f

export DH_VERBOSE = 1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure --buildsystem=cmake -- -DCMAKE_BUILD_TYPE=Release
	
override_dh_auto_build:
	dh_auto_build

override_dh_auto_install:
	dh_auto_install
	mkdir -p debian/zenshell/usr/share/zencr/plugins
	cp -r plugins/* debian/zenshell/usr/share/zencr/plugins/ 2>/dev/null || true
	mkdir -p debian/zenshell/usr/share/zenshell
	cp config.lua debian/zenshell/usr/share/zenshell/config.lua 